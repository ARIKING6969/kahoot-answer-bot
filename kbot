#!/usr/bin/env python3
import klib
import getpass
import argparse


def nameOrID():
	while "the answer is invalid":
		reply = str(input("quizName or quizID? [n/i] > ")).lower().strip()
		if reply[:1] == 'n':
			return True
		if reply[:1] == 'i':
			return False


if __name__ == "__main__":
	parser = argparse.ArgumentParser()
	parser.add_argument("--email", help="The email used to login to create.kahoot.it")
	parser.add_argument("--password", help="The corresponding password used to login to create.kahoot.it")
	parser.add_argument("--name", help="The name to join the kahoot with")
	parser.add_argument("--pin", help="The game pin")
	parser.add_argument("--quizID", help="The game's quizID")
	args = parser.parse_args()
	email = args.email
	password = args.password
	name = args.name
	pin = args.pin
	quizID = args.quizID

	try:
		if not email:
			email = input('email > ')
		if not password:
			password = getpass.getpass('password > ')
		if not name:
			name = input('name > ')
		if not pin:
			pin = input('pin > ')
		if quizID:
			user = klib.Kahoot(pin, name, quizID=quizID)
		else:
			if nameOrID():
				quizName = input('quizName > ')
				user = klib.Kahoot(pin, name, quizName=quizName)
			else:
				quizID = input('quizID > ')
				user = klib.Kahoot(pin, name, quizID=quizID)
		user.authenticate(email, password)
		user.checkPin()
		user.startGame()
	except KeyboardInterrupt:
		print('EXITING...')
		exit()
